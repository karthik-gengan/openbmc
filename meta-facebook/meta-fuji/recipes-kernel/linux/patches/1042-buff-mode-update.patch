diff --git a/arch/arm/boot/dts/aspeed-bmc-facebook-fuji.dts b/arch/arm/boot/dts/aspeed-bmc-facebook-fuji.dts
index 7607fe0b48f8..ce0bae928219 100644
--- a/arch/arm/boot/dts/aspeed-bmc-facebook-fuji.dts
+++ b/arch/arm/boot/dts/aspeed-bmc-facebook-fuji.dts
@@ -4,6 +4,7 @@
 /dts-v1/;
 
 #include <dt-bindings/leds/common.h>
+#include <dt-bindings/clock/ast2600-clock.h>
 #include "ast2600-facebook-netbmc-common.dtsi"
 
 / {
@@ -60,22 +61,110 @@ &jtag1 {
 	status = "okay";
 };
 
+&i2c {
+   i2c_gr: i2c-global-regs@0 {
+       compatible = "aspeed,ast2600-i2c-global", "syscon";
+       reg = <0x0 0x20>;
+       clocks = <&syscon ASPEED_CLK_APB2>;
+       resets = <&syscon ASPEED_RESET_I2C>;
+   };
+};
+
 &i2c0 {
 	multi-master;
 	bus-frequency = <1000000>;
 	aspeed,hw-timeout-ms = <1000>;
+  reg = <0x80 0x80>, <0xC00 0x20>;
+  status = "disable";
+};
+
+&i2c1 {
+ reg = <0x100 0x80>, <0xC20 0x20>;
+ buff-mode;
+ status = "disable";
 };
 
 &i2c2 {
-	status = "okay";
+ status = "disable";
+ reg = <0x180 0x80>, <0xC40 0x20>;
+ buff-mode;
+};
+
+&i2c3 {
